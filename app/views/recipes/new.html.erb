<%= render 'shared/page_title', title: "Create a new recipe" %>

<div class="row">
    <div class="col-md-12">
        <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-md-2">
                    <%= f.label :name %>
                </div>
                <div class="col-md-8">
                    <%= f.text_field :name, class: "form-control", placeholder: "Name of Recipe", autofocus: true %>
                </div>                
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    <%= f.label :description %>
                </div>
                <div class="col-md-8">
                    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter steps to create Recipe" %>
                </div>             
            </div>
            <br>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <%= f.submit class: "btn btn-xlarge btn-lg" %>
                </div>            
            </div>
        <% end %>
        <div class="col-md-offset-4 col-md-4 colormatch">
            [ <%= link_to "Cancel Request and Back to Recipes listing.", recipes_path %> ]
        </div>
    </div>
</div>

