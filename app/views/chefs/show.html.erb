<%= render 'shared/page_title', title: "Chef #{@chef.chefname}'s Profile" %>

<div class="row" >
    <div align="center">
        <div class="col-md-4 col-md-offset-4 center" >
            <%= gravatar_for @chef, size: 150 %>
        </div>
    </div>
</div>

<% if @chef.recipes.count != 0 %>
    <h4 align="center">
        <%= @chef.chefname %>'s recipes
    </h4>

    <div class="col-lg-8 col-md-8 col-sm-7 col-xs-6 padding-zero">
        <ul class=”pagination”>
            <li class="disabled"> 
                <%= will_paginate(@chef_recipes, previous_label: "&laquo;", next_label: "&raquo;", outer_window: 1, inner_window: 0, class: "small-font" ) %>
            </li>
        </ul>
    </div>

    <%= render 'recipes/recipe', obj: @chef_recipes %>

    <div class="col-lg-8 col-md-8 col-sm-7 col-xs-6 padding-zero">
        <ul class=”pagination”>
            <li class="disabled"> 
                <%= will_paginate(@chef_recipes, previous_label: "&laquo;", next_label: "&raquo;", outer_window: 1, inner_window: 0, class: "small-font" ) %>
            </li>
        </ul>
    </div>

<% else %>
    <h4 align="center">
        No recipes yet!
    </h4>
<% end %>
